<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainViewModel"
            type="dev.hong481.pixo.test.ui.screen.MainViewModel" />

        <variable
            name="viewModel"
            type="dev.hong481.pixo.test.ui.screen.editphoto.EditPhotoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fffbe6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <dev.hong481.pixo.test.ui.view.canvas.OverlayCanvas
                android:id="@+id/v_canvas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_000000"
                android:contentDescription="@string/iv_content_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@color/color_ffffff"
                android:gravity="center"
                android:minHeight="150dp"
                android:orientation="vertical"
                android:paddingVertical="35dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_sticker"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    app:items="@{viewModel.stickerList}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>