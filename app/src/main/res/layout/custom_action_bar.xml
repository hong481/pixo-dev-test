<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fffbe6"
    android:elevation="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_album_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="39dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_336959"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/album_list_fragment_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_336959"
            android:textStyle="bold"
            tools:text="@string/my_album" />

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="11dp"
            android:background="@color/color_336959" />

    </LinearLayout>

</LinearLayout>