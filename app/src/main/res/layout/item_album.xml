<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewHolder"
            type="dev.hong481.pixo.test.ui.screen.albumlist.AlbumViewHolder" />


        <variable
            name="viewModel"
            type="dev.hong481.pixo.test.ui.screen.albumlist.AlbumViewHolder.ViewModel" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:onClick="@{() -> viewModel.selectElbum(viewHolder.item)}"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <dev.hong481.pixo.test.ui.view.layout.SquareFrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/iv_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/iv_content_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </dev.hong481.pixo.test.ui.view.layout.SquareFrameLayout>

            <!-- 앨범 정보-->
            <LinearLayout
                android:id="@+id/v_thumbnail_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_e3ebd8"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="9dp"
                app:layout_constraintTop_toBottomOf="@id/iv_thumbnail">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@{viewHolder.titleText}"
                    android:textColor="@color/color_32695a"
                    android:textSize="13sp"
                    tools:text="Vacation" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@{viewHolder.imageCountText}"
                    android:textColor="@color/color_32695a"
                    android:textSize="11sp"
                    tools:text="11 Images" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>